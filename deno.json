{
  "name": "@bosoft/ocal",
  "description": "A terminal time tracker for hackers",
  "version": "0.0.3",
  "exports": "./mod.ts",
  "tasks": {
    "run": "deno run --allow-read --allow-write --allow-run=cal main.ts",
    "dev": "deno run --watch --allow-read --allow-write --allow-run=cal main.ts",
    "compile": "deno compile --allow-read --allow-write --allow-run=cal --output ./bin/ocal ./main.ts",
    "compile:all": {
      "command": "echo Compiling all targets...",
      "dependencies": [
        "compile:mac-arm",
        "compile:mac-x86",
        "compile:unix-arm",
        "compile:unix-x86"
      ]
    },
    "compile:mac-arm": "deno compile --allow-read --allow-write --allow-run=cal --target aarch64-apple-darwin --output ./bin/ocal-darwin-arm64 ./main.ts",
    "compile:mac-x86": "deno compile --allow-read --allow-write --allow-run=cal --target x86_64-apple-darwin --output ./bin/ocal-darwin-x86_64 ./main.ts",
    "compile:unix-arm": "deno compile --allow-read --allow-write --allow-run=cal --target x86_64-unknown-linux-gnu --output ./bin/ocal-arm64 ./main.ts",
    "compile:unix-x86": "deno compile --allow-read --allow-write --allow-run=cal --target x86_64-unknown-linux-gnu --output ./bin/ocal-x86_64 ./main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@/": "./src/",
    "@/utils": "./src/utils/mod.ts"
  }
}
